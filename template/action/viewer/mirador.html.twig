{% extends 'page.html.twig' %}

{% block body %}
<div id="mirador"></div>
<script src="https://unpkg.com/mirador@3.0.0/dist/mirador.min.js"></script>
<script>
Mirador.viewer({
    id: 'mirador',
    window: {
        allowClose: false,
        allowFullscreen: true,
        allowMaximize: false,
        panels: {
            canvas: false,
        },
    },
    windows: [
        {
            manifestId: '{{ id }}',
        }
    ],
    thumbnailNavigation: {
        defaultPosition: 'far-bottom',
    },
    workspace: {
        showZoomControls: true,
    },
    workspaceControlPanel: {
        enabled: false,
    },
});
</script>
{% endblock %}
